{
  "name": "bgat-extensions",
  "displayName": "bgat",
  "description": "Language support for bgat",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.0.0"
  },
  "main": "./extension.js",
  "scripts": {
    "prebuild": "npm run copy-source",
    "copy-source": "cpy -r ./path/to/source/folder/** ./node_modules/your-package-name",
    "build": "npx vsce package",
    "test": "jest",
    "jest:watch": "jest --watch"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:bgat"
  ],
  "contributes": {
    "languages": [
      {
        "id": "bgat",
        "aliases": [
          "begat"
        ],
        "extensions": [
          ".bgat"
        ]
      }
    ],
    "grammars": [
      {
        "language": "bgat",
        "scopeName": "source.bgat",
        "path": "./TextMateGrammer.json"
      }
    ]
  },
  "dependencies": {
    "vscode-languageserver": "^9.0.1",
    "bgat-exports": "file:../exports.js"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "vscode-test": "^1.6.1",
    "vscode": "^1.1.37"
  }
}
